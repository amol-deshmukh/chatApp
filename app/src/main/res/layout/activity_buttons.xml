<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="com.example.hp.chatapplication.Buttons">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/allowButton"
        android:text="Allow User"
        android:hint="Door Open!!" />
        <!--android:onClick="allowButtonClicked"-->


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/denyButtom"
        android:text="Deny User"
        android:hint="Door Remain Closed!!"/>
        <!--android:onClick="denyButtonClicked"/>-->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chatroomButton"
        android:text="Chat Room" />
       <!-- android:onClick="chatroomButtonClicked"/>-->


</LinearLayout>